<Page x:Class="Popov41размер.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Popov41размер"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Попов 41" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition> 
        </Grid.RowDefinitions>
        <StackPanel Name="PanelUp" Grid.Row="0" Margin="1 2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Name="UserInfo" Grid.Column="1">
                    <TextBlock Name="UserName" Text="–" FontSize="16" TextAlignment="Right"></TextBlock>
                    <TextBlock Name="UserRole" Text="–" FontSize="16" TextAlignment="Right"></TextBlock>
                </StackPanel>
                <StackPanel Name="PanelSearch" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0, 0, 0, 8">
                    <TextBlock Text="Поиск по наименованию:" FontSize="20" HorizontalAlignment="Left" Margin="0, 0, 0, 4"></TextBlock>
                    <TextBox Name="TBoxSearch" FontSize="16" Padding="2" TextChanged="TBoxSearch_TextChanged"></TextBox>
                </StackPanel>
                <StackPanel Name="PanelSort" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Сортировка:" FontSize="20" HorizontalAlignment="Left" Margin="0, 0, 0, 4"></TextBlock>
                    <RadioButton Content="По возрастанию стоимости" FontSize="16" HorizontalAlignment="Left" Name="RButtonUp" Checked="RButtonUp_Checked"></RadioButton>
                    <RadioButton Content="По убыванию стоимости" FontSize="16" HorizontalAlignment="Left" Name="RButtonDown" Checked="RButtonDown_Checked"></RadioButton>
                </StackPanel>
                <StackPanel Name="PanelFilter" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="Фильтрация по скидке:" FontSize="20" HorizontalAlignment="Left" Margin="0, 0, 0, 4"></TextBlock>
                    <ComboBox Name="CBoxFilter" FontSize="16" HorizontalAlignment="Left" Width="380" SelectionChanged="CBoxFilter_SelectionChanged">
                        <TextBlock>Все</TextBlock>
                        <TextBlock>От 0 до 10%</TextBlock>
                        <TextBlock>От 10 до 15%</TextBlock>
                        <TextBlock>От 15% и более</TextBlock>
                    </ComboBox>
                </StackPanel>
                <TextBlock Name="TBNumRecords" Text="—" FontSize="14" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" Margin="0, 5, 0, 0" Foreground="Black" Opacity="0.3"/>
            </Grid>
        </StackPanel>
        <ListView Name="ProductListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="500"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="160" Grid.Column="0" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="4" Margin="0,0,10,0">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res/images/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" FontSize="16" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="16"></TextBlock>
                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Скидка" FontSize="16" HorizontalAlignment="Center"></TextBlock>
                            <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0} %}" FontSize="25" HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid> 
</Page>
